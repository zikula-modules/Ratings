{# purpose of this template: ratings atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest ratings') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of ratings') }} - {{ getSystemVar('slogan') }}</subtitle>
    <author>
        <name>{{ getSystemVar('sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.schemeAndHttpHost|replace({'http://': '', '/': ''}) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('paustianratingsmodule_rating_' ~ routeArea ~ 'display', {'id': items.first.getId()}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('paustianratingsmodule_rating_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.schemeAndHttpHost ~ app.request.basePath }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.schemeAndHttpHost }}</rights>
{% for rating in items %}
    <entry>
        <title type="html">{{ rating|paustianratingsmodule_formattedTitle }}</title>
        <link rel="alternate" type="text/html" href="{{ url('paustianratingsmodule_rating_' ~ routeArea ~ 'display', {'id': rating.getId()}) }}" />
        {% set uniqueID %}tag:{{ app.request.schemeAndHttpHost|replace({ 'http://': '', '/': '' }) }},{{ rating.createdDate|date('Y-m-d') }}:{{ path('paustianratingsmodule_rating_' ~ routeArea ~ 'display', {'id': rating.getId()}) }}{% endset %}
        <id>{{ uniqueID }}</id>
        {% if rating.updatedDate|default %}
            <updated>{{ rating.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
        {% endif %}
        {% if rating.createdDate|default %}
            <published>{{ rating.createdDate|date('Y-m-dTH:M:SZ') }}</published>
        {% endif %}
        {% if rating.createdBy|default and rating.createdBy.getUid() > 0 %}
            {% set creatorAttributes = rating.createdBy.getAttributes() %}
            <author>
               <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(rating.createdBy.getUname()) }}</name>
               <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
               <email>{{ rating.createdBy.getEmail() }}</email>
            </author>
        {% endif %}
        <summary type="html">
            <![CDATA[
            {{ rating.moduleName|truncate(150, true, '&hellip;')|default('-') }}
            ]]>
        </summary>
        <content type="html">
            <![CDATA[
            {{ rating|paustianratingsmodule_formattedTitle|replace({ '<br>': '<br />' }) }}
            ]]>
        </content>
    </entry>
{% endfor %}
</feed>
