{{ pageAddAsset('stylesheet', zasset('@PaustianRatingsModule:css/style.css')) }}
{% set counter = 1 %}
<div>
    <h3>{{ __("Rating") }}</h3>
    {% if average > 0 %}
    <div id="#stars" title="{{ __("Click on a star to add your rating.") }}">
    {% else %}
    <div id="#stars" title="{{ __("There are no ratings for this item. Be the first to rate it!") }}">
    {% endif %}
        <p>
        {% if ratingClass %}
            {% if average != 0 %}
                {% for i in 1..average %}
                    <span id="rating_{{ counter }}" class="fa {{ ratingClass }}"></span>
                    {% set counter = counter +1 %}
                {% endfor %}
                {% if doHalfStar and (average != max) %}
                    <span id="rating_{{ counter }}" class="fa {{ halfRatingClass }}"></span>
                    {% set counter = counter +1 %}
                {% endif %}
            {% endif %}
            {% if emptyStars > 0 %}
                {% for j in 1..emptyStars %}
                    <span id="rating_{{ counter }}" class="fa {{ emptyRatingClass }}"></span>
                    {% set counter = counter +1 %}
                {% endfor %}
            {% endif %}
        {% else %}
            {% if average != 0 %}
                {% for i in 1..average %}
                    <img id="rating_{{ counter }}" class="rating-star" src="{{ ratingIcon }}"
                         alt="{{ __("rating icon for rating the item") }}"/>
                    {% set counter = counter +1 %}
                {% endfor %}
                {% if doHalfStar and (average != max) %}
                    <img id="rating_{{ counter }}" class="rating-star" src="{{ halfRatingIcon }}"
                         alt="{{ __("rating icon for rating the item") }}"/>
                    {% set counter = counter +1 %}
                {% endif %}
            {% endif %}
            {% if emptyStars > 0 %}
                {% for i in 1..emptyStars %}
                    <img id="rating_{{ counter }}" class="rating-star" src="{{ emptyRatingIcon }}"
                         alt="{{ __("rating icon for rating the item") }}"/>
                    {% set counter = counter +1 %}
                {% endfor %}
            {% endif %}
        {% endif %}
        {% if average > 0 %}
            <span id="averageNumber"
                  class="avg-font"> ({{ average | round(1) }} {{ __("of") }} {{ max }}) </span>
        {% else %}
            <span id="averageNumber" class="avg-font"></span>
        {% endif %}
        <span id="maxSize" class="hidden-style">{{ max }}</span>
        <span id="module" class="hidden-style">{{ module }}</span>
        <span id="moduleItem" class="hidden-style">{{ moduleItem }}</span>
        <span id="user" class="hidden-style">{{ user }}</span>
        </p>
    </div>
</div>
    {% block footer %}
    {{ pageAddAsset('javascript', zasset('@PaustianRatingsModule:js/PaustianRatingsModule.Ratings.js'), 99) }}
{% endblock %}