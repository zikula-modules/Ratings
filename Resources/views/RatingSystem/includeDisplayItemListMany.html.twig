{# purpose of this template: inclusion template for display of related rating systems #}
{% set hasAdminPermission = permissionHelper.hasComponentPermission('ratingSystem', constant('ACCESS_EDIT')) %}
{% if items|default and items|length > 0 %}
<ul class="list-group paustianratingsmodule-related-item-list ratingsystem">
{% for item in items %}
    {% if hasAdminPermission or (item.workflowState == 'approved' and permissionHelper.mayRead(item)) %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
    {{ item|paustianratingsmodule_formattedTitle }}
</h4>
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
