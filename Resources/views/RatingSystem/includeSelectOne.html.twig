{# purpose of this template: inclusion template for managing related rating system #}
{% if displayMode is not defined or displayMode is empty %}
    {% set displayMode = 'choices' %}
{% endif %}
{% if tabs|default(false) == true %}
    <div role="tabpanel" class="tab-pane fade" id="tabRatingSystem" aria-labelledby="ratingSystemTab">
        <h3>{{ heading|default ? heading : __('Rating system') }}</h3>
{% else %}
    <fieldset class="ratingsystem">
{% endif %}
    <legend>{{ heading|default ? heading : __('Rating system') }}</legend>
    <div id="{{ alias }}InlineEditingContainer">
        {% if displayMode == 'embedded' %}
            {% set subFields = attribute(form, alias) %}
            <fieldset>
                <legend>{{ __('Content') }}</legend>
                {{ form_row(attribute(subFields, 'scaleDim')) }}
                {{ form_row(attribute(subFields, 'iconFa')) }}
                {{ form_row(attribute(subFields, 'iconUrl')) }}
            </fieldset>
        {% elseif displayMode == 'choices' %}
            {{ form_row(attribute(form, alias), {required: mandatory}) }}
        {% elseif displayMode == 'autocomplete' %}
            {{ form_row(attribute(form, alias), {required: mandatory}) }}
            <div class="paustianratingsmodule-relation-leftside">
                {{ include(
                    '@PaustianRatingsModule/RatingSystem/includeSelectItemListOne.html.twig',
                    attribute(linkingItem, alias) is defined ? {item: attribute(linkingItem, alias)} : {}
                ) }}
            </div>
            <br style="clear: both" />
        {% endif %}
    </div>
{% if tabs|default(false) == true %}
    </div>
{% else %}
    </fieldset>
{% endif %}
