{# purpose of this template: display pages without the theme #}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ app.request.locale }}" lang="{{ app.request.locale }}">
<head>
    <title>{{ block('pageTitle') is defined ? block('pageTitle') : block('title') }}</title>
</head>
<body>
    <h2>{{ block('title') }}</h2>
    {% block content %}{% endblock %}
    {% block footer %}
        <p id="poweredByMost" class="text-center">
            Powered by <a href="https://modulestudio.de" title="Get the MOST out of Zikula!">ModuleStudio 1.4.0</a>
        </p>
        {{ pageAddAsset('javascript', zasset('@PaustianRatingsModule:js/PaustianRatingsModule.Backlink.Integration.js')) }}
        {{ pageAddAsset('stylesheet', zasset('@PaustianRatingsModule:css/custom.css'), 120) }}
        {{ pageAddAsset('javascript', zasset('@PaustianRatingsModule:js/PaustianRatingsModule.js')) }}
        <script>
            /* <![CDATA[ */
                if (typeof(Zikula) == 'undefined') {var Zikula = {};}
                Zikula.Config = {'entrypoint': '{{ getSystemVar('entrypoint', 'index.php') }}', 'baseURL': '{{ app.request.schemeAndHttpHost ~ '/' }}', 'baseURI': '{{ app.request.basePath }}'};
            /* ]]> */
        </script>
        {% if 'edit' in app.request.get('_route') or 'config' in app.request.get('_route') %}
            {{ polyfill(['forms', 'forms-ext']) }}
        {% endif %}
        {{ pageAddAsset('javascript', zasset('@PaustianRatingsModule:js/PaustianRatingsModule.RawPage.js')) }}
    {% endblock %}
</body>
</html>
